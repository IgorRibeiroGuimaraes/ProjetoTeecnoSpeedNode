{
  "compilerOptions": {
    "target": "ES2020", // Define o alvo da compilação
    "module": "CommonJS", // Define o sistema de módulos
    "strict": true, // Ativa verificações estritas
    "esModuleInterop": true, // Permite interoperabilidade com módulos ES
    "skipLibCheck": true, // Ignora verificações de tipos em arquivos de biblioteca
    "forceConsistentCasingInFileNames": true, // Força consistência em nomes de arquivos
    "outDir": "./dist", // Define o diretório de saída para os arquivos compilados
    "rootDir": "./src" // Define o diretório raiz dos arquivos de entrada
  },
  "include": ["src/**/*", "src/testSupabaseStorage.ts"], // Inclui todos os arquivos na pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}